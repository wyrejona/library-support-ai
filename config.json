{
  "ollama": {
    "base_url": "http://localhost:11434",
    "chat_model": "llama3.2:1b",
    "embedding_model": "nomic-embed-text:latest",
    "timeout": 120,
    "temperature": 0.1
  },
  "vector_store": {
    "path": "vector_store",
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "batch_size": 10
  },
  "paths": {
    "pdfs_dir": "pdfs",
    "data_dir": "data",
    "templates_dir": "app/templates",
    "project_root": "."
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000
  },
  "search": {
    "default_k": 5,
    "max_context_length": 3000
  },
  "app": {
    "name": "Library Support AI",
    "version": "1.0.0",
    "debug": false
  }
}